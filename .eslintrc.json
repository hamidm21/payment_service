{   
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "no-multiple-empty-lines": [
            "warn"
        ],
        "no-throw-literal": [
            "error"
        ],
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": [
            "warn"
        ],
        "prefer-const": [
            "warn"
        ],
        "no-unreachable": [
            "error"
        ]
    }
    
}